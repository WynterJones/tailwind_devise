<div class="container mx-auto">
  <h2 class="text-4xl mb-4 font-medium text-center text-white">Members Area</h2>

  <div class="bg-white mb-4 border-blue-700 text-gray-700 border-2 rounded p-8 shadow-lg">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: 'block mb-2 font-bold' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-gray-100 focus:bg-white focus:outline-none focus:border-orange-600 border-2 border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: 'block mb-2 font-bold' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'bg-gray-100 focus:bg-white focus:outline-none border-2 focus:border-orange-600 border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 text-sm text-gray-500">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <button class="bg-blue-600 p-2 px-5 text-white text-lg rounded">Login</button>
      </div>
    <% end %>
  </div>

  <div class="text-sm text-center">
    <p class="mb-1">Don't have account yet? <%= link_to "Sign Up", new_registration_path(resource_name), class: 'text-white' %> </p>
    <p>Did you forget your password? <%= link_to "Reset Password", new_password_path(resource_name), class: 'text-white' %></p>
  </div>
</div>
