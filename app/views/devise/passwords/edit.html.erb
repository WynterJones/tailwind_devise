<div class="container mx-auto">
  <h2 class="text-4xl mb-4 font-medium text-center text-white">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-3">
      <%= f.label :password, "New password", class: 'block mb-2 font-bold' %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'bg-gray-100 focus:bg-white focus:outline-none focus:border-orange-600 border-2 border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal' %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Confirm new password", class: 'block mb-2 font-bold' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'bg-gray-100 focus:bg-white focus:outline-none focus:border-orange-600 border-2 border-gray-300 rounded-lg py-2 px-4 block w-full appearance-none leading-normal' %>
    </div>

    <div class="actions">
      <button class="bg-blue-600 p-2 px-5 text-white text-lg rounded">Change My Password</button>
    </div>
  <% end %>

  <div class="text-sm text-center">
    <p>Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: 'text-white' %></p>
    <p><%= link_to "Create Your Account", new_registration_path(resource_name), class: 'text-white' %></p>
  </div>
</div>
